  <div class="container">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-md-6">
        <%= form_with(model: adherent, local: true) do |form| %>
          <% if adherent.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(adherent.errors.count, "error") %> prohibited this adherent from being saved:</h2>
              <ul>
                <% adherent.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group row">
            <%= form.label :nom, class: "col-sm-3 col-form-label" %>
            <div class="col-sm-9">
              <%= form.text_field :nom, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :prenom, class: "col-sm-3 col-form-label" %>
            <div class="col-sm-9">
              <%= form.text_field :prenom, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :cin, class: "col-sm-3 col-form-label" %>
            <div class="col-sm-9">
              <%= form.text_field :cin, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
              <%= form.submit class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
