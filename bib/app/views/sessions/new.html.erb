<!-- app/views/sessions/new.html.erb -->
<h1>Login</h1>
<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit "Login" %>
<% end %>
