<div class="container">
  <div class="text-center">
    <h1>Détails du document</h1>
  </div>

  <div class="form-horizontal">
    <div class="form-group row">
      <label for="type" class="col-sm-2 col-form-label">Type :</label>
      <div class="col-sm-10">
        <input type="text" id="type" value="<%= @document.type %>" readonly class="form-control" disabled>
      </div>
    </div>

    <div class="form-group row">
      <label for="titre" class="col-sm-2 col-form-label">Titre :</label>
      <div class="col-sm-10">
        <input type="text" id="titre" value="<%= @document.titre %>" readonly class="form-control" disabled>
      </div>
    </div>

    <div class="form-group row">
      <label for="auteur" class="col-sm-2 col-form-label">Auteur :</label>
      <div class="col-sm-10">
        <input type="text" id="auteur" value="<%= @document.auteur %>" readonly class="form-control" disabled>
      </div>
    </div>

    <div class="form-group row">
      <label for="disponible" class="col-sm-2 col-form-label">Disponible :</label>
      <div class="col-sm-10">
        <input type="text" id="disponible" value="<%= @document.disponible ? 'Oui' : 'Non' %>" readonly class="form-control" disabled>
      </div>
    </div>

    <div class="form-group row">
      <label for="isbn" class="col-sm-2 col-form-label">ISBN :</label>
      <div class="col-sm-10">
        <input type="text" id="isbn" value="<%= @document.isbn %>" readonly class="form-control" disabled>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= link_to 'Modifier', edit_document_path(@document), class: 'btn btn-primary' %> |
        <%= link_to 'Retour à la liste', documents_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
