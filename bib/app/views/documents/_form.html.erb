<div class="container">
  <div class="text-center">
    <%= form_with(model: @document) do |form| %>
      <% if @document.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@document.errors.count, "erreur") %> empêche(nt) la sauvegarde de ce document :</h2>
          <ul>
            <% @document.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group row">
        <%= form.label :type, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.select :type, ['Livres', 'Revues', 'Dictionnaires', 'BD'], { include_blank: 'Sélectionner un type' }, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :titre, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :titre, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :isbn, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :isbn, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :auteur, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :auteur, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :disponible, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.check_box :disponible, class: "form-check-input" %>
          <%= form.label :disponible, class: "form-check-label" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= form.submit 'Enregistrer', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
