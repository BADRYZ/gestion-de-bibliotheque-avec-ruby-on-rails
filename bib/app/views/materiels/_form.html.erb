<div class="container text-center">
  <%= form_with(model: @materiel) do |form| %>
    <% if @materiel.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@materiel.errors.count, "erreur") %> empêche(nt) la sauvegarde de ce matériel :</h2>
        <ul>
          <% @materiel.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= form.label :materiel_id, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :materiel_id, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :type, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :type, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :marque, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :marque, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :disponible, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.check_box :disponible, class: "form-check-input" %>
        <%= form.label :disponible, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= form.submit 'Enregistrer', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
