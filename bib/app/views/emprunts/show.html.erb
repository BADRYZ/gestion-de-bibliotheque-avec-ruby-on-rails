<div class="container">
  <div class="text-center">
    <h1>Détails de l'emprunt</h1>
  </div>

  <form>
    <div class="form-group row">
      <label for="adherent" class="col-sm-2 col-form-label">Adhérent :</label>
      <div class="col-sm-10">
        <input type="text" id="adherent" value="<%= @emprunt.adherent.nom %>" class="form-control" disabled>
      </div>
    </div>

    <div class="form-group row">
      <label for="item" class="col-sm-2 col-form-label">Item :</label>
      <div class="col-sm-10">
        <input type="text" id="item" value="<%= @emprunt.item_type == 'Document' ? @emprunt.item.titre : @emprunt.item.marque %>" class="form-control" disabled>
      </div>
    </div>

    <div class="form-group row">
      <label for="item_type" class="col-sm-2 col-form-label">Type d'item :</label>
      <div class="col-sm-10">
        <input type="text" id="item_type" value="<%= @emprunt.item_type %>" class="form-control" disabled>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= link_to 'Modifier', edit_emprunt_path(@emprunt), class: 'btn btn-primary' %> |
        <%= link_to 'Retour', emprunts_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </form>
</div>
